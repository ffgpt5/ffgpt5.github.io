<addons>
  <addon id="plugin.video.ffgpt" name="FanFilm GPT" version="2025.10.05" provider-name="Wojtek (GPT)">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.ptw" version="2023.01.06.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary lang="pl">FanFilm GPT</summary>
      <description lang="pl">Fork FanFilm z Twoimi modyfikacjami.</description>
      <platform>all</platform>
    </extension>
  </addon>

  <addon id="script.module.ptw" name="PTW Module" version="2023.01.06.0" provider-name="PTW(gpt)">
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="en">PTW</summary>
    </extension>
  </addon>

  <addon id="repository.ffgpt5" name="FFGPT5 repo" version="1.0.0" provider-name="Wojtek (GPT)">
    <extension point="xbmc.addon.repository" name="FFGPT5 repo">
      <dir minversion="21.0.0">
        <info compressed="false">https://ffgpt5.github.io/addons.xml</info>
        <checksum>https://ffgpt5.github.io/addons.xml.md5</checksum>
        <datadir zip="true">https://ffgpt5.github.io/zips21</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Repo Wojtka (FanFilm GPT)</summary>
      <description>Twoje prywatne repozytorium z forkiem FanFilm.</description>
      <platform>all</platform>
      <assets><icon>icon.png</icon></assets>
    </extension>
  </addon>
</addons>
